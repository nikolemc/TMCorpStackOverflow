@model StackOverflow.ViewModels.ModeratorDashboardViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Moderator Dashboard</h2>

<div class="col-md-12 col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Number of Unanswered Questions</h3>
            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
        </div>
        <div class="panel-body">@Model.Posts.Where(w => w.IsAnswered == false).Count()</div>
    </div>
</div>

<div class="col-md-12 col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Number of Total Questions</h3>
            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
        </div>
        <div class="panel-body">@Model.Posts.Count()</div>
    </div>
</div>

<div class="col-md-12 col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Number of Questions Per User</h3>
            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
        </div>
        
        <div class="panel-body">
            @for (int i = 0; i < Model.MyUsers.Count(); i++)
            {
                <p>@Model.MyUsers[i].UserName : @Model.Posts.Where(w => w.User == Model.MyUsers[i]).Count()</p>


            }
        </div>
    </div>
</div>

<div class="col-md-12 col-lg-12">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Number of Answers Per User</h3>
            <span class="pull-right clickable"><i class="glyphicon glyphicon-chevron-up"></i></span>
        </div>
        <div class="panel-body">
            @for (int i = 0; i < Model.MyUsers.Count(); i++)
            {
                <p>@Model.MyUsers[i].UserName : @Model.Comments.Where(w => w.User == Model.MyUsers[i]).Count()</p>

            }
        </div>
    </div>
</div>

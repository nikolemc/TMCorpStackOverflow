@model StackOverflow.ViewModels.ModeratorDashboardViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Moderator Dashboard</h2>

<div class="bs-callout bs-callout-warning">
    <h4>Number of Unanswered Questions</h4>
    @Model.Posts.Where(w => w.IsAnswered == false).Count()
</div>


<div class="bs-callout bs-callout-warning">
    <h4>Number of Total Questions</h4>
    @Model.Posts.Count()
</div>


<div class="bs-callout bs-callout-warning">
    <h4>Number of Questions Per User</h4>
    @for (int i = 0; i < Model.MyUsers.Count(); i++)
            {
        <p>@Model.MyUsers[i].UserName : @Model.Posts.Where(w => w.User == Model.MyUsers[i]).Count()</p>


    }
</div>


<div class="bs-callout bs-callout-warning">
    <h4>Number of Answers Per User</h4>
    @for (int i = 0; i < Model.MyUsers.Count(); i++)
            {
        <p>@Model.MyUsers[i].UserName : @Model.Comments.Where(w => w.User == Model.MyUsers[i]).Count()</p>

    }
</div>

